<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:clipChildren="false"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:orientation="vertical"

            >

            <android.support.v4.view.ViewPager
                android:id="@+id/rv_main_top_image"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:clipChildren="false"
                android:focusable="true"
                android:focusableInTouchMode="true"
                />

            <LinearLayout
                android:elevation="1dp"
                android:id="@+id/tag_host_main_1"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/corners_bg"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                >
                <LinearLayout

                    android:id="@+id/tag_main_3_1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|right">
                    <ImageView
                        android:id="@+id/img_tab_1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/com_menu_ic_nor_1"
                        android:layout_marginRight="15dp"
                        />

                    <TextView
                        android:id="@+id/tv_tab_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="咨询"
                        android:layout_marginRight="20dp"
                        />
                </LinearLayout>
                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/com_di"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    />
                <LinearLayout
                    android:id="@+id/tag_main_3_2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left">
                    <ImageView
                        android:id="@+id/img_tab_2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/com_menu_ic_nor_2"/>
                    <TextView
                        android:id="@+id/tv_tab_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="问答" />
                </LinearLayout>

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.example.overl.kefu.views.ViewPagerForScrollView
                    android:id="@+id/main_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:flipInterval="30"
                    android:persistentDrawingCache="animation"
                    android:visibility="visible">

                </com.example.overl.kefu.views.ViewPagerForScrollView>

            </RelativeLayout>
        </LinearLayout>


    </ScrollView>



</LinearLayout>